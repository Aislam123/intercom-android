<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="io.intercom.eclipsesample">

    <uses-permission android:name="android.permission.INTERNET"/>
    
    <uses-sdk android:minSdkVersion="9" android:targetSdkVersion="21"/>

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:name="io.intercom.eclipsesample.SampleApplication" android:theme="@style/AppTheme">
        <activity android:label="@string/app_name" android:name="io.intercom.eclipsesample.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:configChanges="screenSize|orientation" android:launchMode="singleTop" android:name="intercom.intercomsdk.activities.MainActivity" android:theme="@style/IntercomSDK_PanelTheme" android:windowSoftInputMode="stateUnchanged|adjustResize"/>
        <activity android:exported="false" android:name="intercom.intercomsdk.activities.TestActivity"/>
        <service android:enabled="true" android:name="intercom.intercomsdk.chathead.NotificationsService"/>

        <service android:name="intercom.intercomsdk.gcm.GcmIntentService"/>

        <!-- GCM setup -->
        <receiver android:name="intercom.intercomsdk.gcm.GcmBroadcastReceiver" android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
                <action android:name="com.google.android.c2dm.intent.REGISTRATION"/>

                <category android:name="intercom.intercomsdk.gcm"/>
            </intent-filter>
        </receiver>

        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version"/>
    </application>

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <!-- GCM REQUIRED PERMISSIONS -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
</manifest>
